@model List<UniPool01.Models.Review>
@{
    ViewData["Title"] = "My Reviews";
    var avgRating = (double)ViewBag.AverageRating;
    var totalReviews = (int)ViewBag.TotalReviews;
}

<div class="container mt-4">
    <h2 class="section-title">⭐ My Driver Reviews</h2>

    <!-- Rating Summary Card -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body text-center">
            <h1 class="display-3 fw-bold text-gradient mb-2">
                @avgRating.ToString("0.0")
                <i class="bi bi-star-fill" style="color: #FFC107;"></i>
            </h1>
            <p class="text-muted mb-0">Average Rating from @totalReviews review(s)</p>

            <!-- Star Rating Display -->
            <div class="mt-3">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Math.Floor(avgRating))
                    {
                        <i class="bi bi-star-fill" style="color: #FFC107; font-size: 2rem;"></i>
                    }
                    else if (i - avgRating < 1 && i - avgRating > 0)
                    {
                        <i class="bi bi-star-half" style="color: #FFC107; font-size: 2rem;"></i>
                    }
                    else
                    {
                        <i class="bi bi-star" style="color: #FFC107; font-size: 2rem;"></i>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Individual Reviews -->
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h5><i class="bi bi-info-circle"></i> No Reviews Yet</h5>
            <p class="mb-0">Once passengers rate your rides, their reviews will appear here.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var review in Model)
            {
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <!-- Review Header -->
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="mb-1 fw-bold">
                                        <i class="bi bi-person-circle"></i> @review.Reviewer.FullName
                                    </h5>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar3"></i> @review.CreatedAt.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                                <div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= review.Rating)
                                        {
                                            <i class="bi bi-star-fill" style="color: #FFC107;"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star" style="color: #FFC107;"></i>
                                        }
                                    }
                                </div>
                            </div>

                            <!-- Ride Info -->
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt"></i>
                                    @review.Ride.Departure → @review.Ride.Destination
                                </small>
                            </div>

                            <!-- Review Comment -->
                            @if (!string.IsNullOrWhiteSpace(review.Comment))
                            {
                                <p class="card-text">
                                    <i class="bi bi-chat-left-quote"></i> "@review.Comment"
                                </p>
                            }
                            else
                            {
                                <p class="card-text text-muted fst-italic">
                                    <i class="bi bi-chat-left"></i> No comment provided
                                </p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-4">
        <a asp-controller="Profile" asp-action="Edit" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Profile
        </a>
        <a asp-controller="Ride" asp-action="MyOffered" class="btn btn-primary">
            <i class="bi bi-car-front"></i> My Offered Rides
        </a>
    </div>
</div>