@model List<UniPool01.Models.Ride>
@{
    ViewData["Title"] = "My Offered Rides";
}

<div class="container mt-4">
    <h2 class="mb-4">My Offered Rides</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <strong>No rides offered yet.</strong>
            <p class="mb-0">Ready to offer a ride? <a asp-action="Add" class="alert-link">Create one now!</a></p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>From</th>
                        <th>To</th>
                        <th>When</th>
                        <th>Seats</th>
                        <th>Passengers</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ride in Model)
                    {
                        <tr>
                            <td>@ride.Departure</td>
                            <td>@ride.Destination</td>
                            <td>@ride.DepartureTime.ToString("MMM dd, yyyy h:mm tt")</td>
                            <td>@ride.AvailableSeats</td>
                            <td>
                                <span class="badge bg-info">@(ride.Bookings?.Count ?? 0)</span>
                            </td>
                            <td>
                                @if (ride.IsCompleted)
                                {
                                    <span class="badge bg-secondary">✓ Completed</span>
                                }
                                else if (ride.AvailableSeats == 0)
                                {
                                    <span class="badge bg-warning">Full</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Manage" asp-route-id="@ride.Id" class="btn btn-primary">
                                        👥 Manage
                                    </a>

                                    @if (!ride.IsCompleted)
                                    {
                                        <form asp-action="MarkComplete" method="post" asp-route-id="@ride.Id" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-success" onclick="return confirm('Mark this ride as completed?');">
                                                ✓ Complete
                                            </button>
                                        </form>
                                    }

                                    @if ((ride.Bookings?.Count ?? 0) == 0)
                                    {
                                        <form asp-action="DeleteRide" method="post" asp-route-id="@ride.Id" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this ride permanently?');">
                                                🗑️ Delete
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Back to All Rides</a>
        <a asp-action="Add" class="btn btn-success">➕ Offer New Ride</a>
    </div>
</div>