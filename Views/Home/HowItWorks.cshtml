@{
    ViewData["Title"] = "How It Works";
}

<section class="hero-section">
    <div class="container text-center text-white">
        <h1 class="display-4 fw-bold mb-3">How UniPool Works</h1>
        <p class="lead mb-4">A smarter, safer and affordable way for university students to travel together</p>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container" style="max-width:800px;">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="step-card p-4 shadow-sm rounded">
                    <h4 class="fw-bold">1. Register</h4>
                    <p class="mt-2">Sign up using your university email for identity verification.</p>
                </div>
            </div>

            <div class="col-md-4 mt-3 mt-md-0">
                <div class="step-card p-4 shadow-sm rounded">
                    <h4 class="fw-bold">2. Offer / Search Rides</h4>
                    <p class="mt-2">Offer seats if you drive, or find rides going your way.</p>
                </div>
            </div>

            <div class="col-md-4 mt-3 mt-md-0">
                <div class="step-card p-4 shadow-sm rounded">
                    <h4 class="fw-bold">3. Join & Travel</h4>
                    <p class="mt-2">Book a seat, meet up, and ride together.</p>
                </div>
            </div>
        </div>
    </div>
</section>
