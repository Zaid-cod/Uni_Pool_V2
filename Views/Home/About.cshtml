@{
    ViewData["Title"] = "About";
}

<section class="hero-section">
    <div class="container text-center text-white">
        <h1 class="display-4 fw-bold">About UniPool</h1>
        <p class="lead">Connecting university students through shared rides</p>
    </div>
</section>

<section class="py-5">
    <div class="container" style="max-width:900px;">

        <!-- What is UniPool Section -->
        <div class="card p-4 mb-4 shadow-sm">
            <h2 class="fw-bold mb-3 text-gradient">What is UniPool?</h2>
            <p class="fs-5">
                UniPool is a collaborative ride-sharing platform designed exclusively for university students.
                It reduces transportation costs, minimizes parking problems, eases traffic near campus,
                and promotes a safer travel experience by connecting verified students within the university network.
            </p>
        </div>

        <!-- Why UniPool Section -->
        <div class="card p-4 mb-4 shadow-sm">
            <h2 class="fw-bold mb-3 text-gradient">Why Choose UniPool?</h2>
            <ul class="fs-5 mb-0">
                <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Save money by sharing fuel and transport costs</li>
                <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Reliable and safe rides with verified students only</li>
                <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Eco-friendly traveling — fewer vehicles, reduced traffic</li>
                <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Meet new friends and build campus connections</li>
            </ul>
        </div>

        <!-- Statistics Section -->
        <div class="row text-center g-4 mt-4">
            <div class="col-md-4">
                <div class="card p-4 shadow-sm hover-scale h-100">
                    <i class="bi bi-car-front-fill" style="font-size: 3rem; color: #00BCD4;"></i>
                    <h3 class="fw-bold mt-3 mb-2">200+</h3>
                    <p class="text-muted mb-0">Rides Arranged Weekly</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card p-4 shadow-sm hover-scale h-100">
                    <i class="bi bi-building" style="font-size: 3rem; color: #FF6F61;"></i>
                    <h3 class="fw-bold mt-3 mb-2">14+</h3>
                    <p class="text-muted mb-0">Departments Connected</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card p-4 shadow-sm hover-scale h-100">
                    <i class="bi bi-bullseye" style="font-size: 3rem; color: #4CAF50;"></i>
                    <h3 class="fw-bold mt-3 mb-2">1 Goal</h3>
                    <p class="text-muted mb-0">Safe & Affordable Travel</p>
                </div>
            </div>
        </div>

        <!-- Mission Statement -->
        <div class="card p-4 mt-5 shadow-sm bg-light">
            <h3 class="fw-bold text-center mb-3">Our Mission</h3>
            <p class="fs-5 text-center mb-0">
                To create a sustainable, safe, & affordable transportation network that brings
                university students together, reduces environmental impact, and fosters a stronger
                campus community through shared journeys.
            </p>
        </div>

    </div>

</section>
